{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd thesis-frontend && npm ci && npm run build:production",
    "watchPatterns": [
      "thesis-frontend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd thesis-frontend && npm run start",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  },
  "root": "thesis-frontend"
}
